{
  "identifier": "com.github.dennis84.tinywrite",
  "productName": "TinyWrite",
  "version": "0.1.0",
  "build": {
    "beforeBuildCommand": "vite build",
    "beforeDevCommand": "vite",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "windows": [
      {
        "title": "TinyWrite",
        "width": 500,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$HOME/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ]
  },
  "plugins": {
    "cli": {
      "description": "A markdown text editor",
      "args": [
        {
          "name": "source",
          "index": 1,
          "takesValue": true
        },
        {
          "name": "no-default-features",
          "takesValue": false
        }
      ]
    }
  }
}
