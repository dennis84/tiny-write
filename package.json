{
  "name": "TinyWrite",
  "version": "0.3.1",
  "build": {
    "appId": "com.github.dennis84.tinywrite",
    "files": [
      "index.html",
      "index.js",
      "dist/index.js",
      "fonts/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    }
  },
  "dependencies": {
    "codemirror": "^5.48.0",
    "electron-updater": "^4.1.2",
    "free-style": "^2.6.1",
    "hyperapp": "git+https://github.com/jorgebucaran/hyperapp.git",
    "insert-css": "^2.0.0",
    "selection-ranges": "^3.0.3"
  },
  "devDependencies": {
    "electron": "^5.0.7",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-typescript": "^1.0.1",
    "tslib": "^1.10.0",
    "typescript": "^3.5.3"
  },
  "scripts": {
    "build": "npx rollup -c",
    "watch": "npx rollup -c -w",
    "pack": "npm run build && npx electron-builder --dir",
    "dist": "npm run build && npx electron-builder"
  }
}
