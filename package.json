{
  "name": "TinyWrite",
  "version": "0.4.1",
  "build": {
    "appId": "com.github.dennis84.tinywrite",
    "files": [
      "index.js",
      "dist/**"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "directories": {
      "output": "app"
    }
  },
  "dependencies": {
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "codemirror": "^5.57.0",
    "date-fns": "^2.16.1",
    "electron-updater": "^4.3.4",
    "emotion": "^10.0.27",
    "emotion-theming": "^10.0.27",
    "idb": "^5.0.4",
    "is-image": "^3.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "slate": "^0.58.4",
    "slate-history": "^0.58.4",
    "slate-react": "^0.58.4"
  },
  "devDependencies": {
    "@types/react": "^16.9.49",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "cssnano": "^4.1.10",
    "electron": "^10.1.1",
    "electron-builder": "^22.8.0",
    "eslint": "^7.8.1",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.5.0",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2"
  },
  "scripts": {
    "web": "parcel index.html",
    "app": "NODE_ENV=dev electron . & parcel index.html --target electron --public-url $(pwd)/dist",
    "build": "npm run lint && parcel build index.html --target electron --public-url .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "staticFiles": {
    "staticPath": "assets",
    "watcherGlob": "assets/**"
  },
  "browserslist": [
    "last 1 Chrome versions"
  ]
}
