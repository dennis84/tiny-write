{
  "name": "TinyWrite",
  "version": "0.4.1",
  "build": {
    "appId": "com.github.dennis84.tinywrite",
    "files": [
      "index.js",
      "dist/**"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "directories": {
      "output": "app"
    }
  },
  "dependencies": {
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "codemirror": "^5.53.2",
    "dayjs": "^1.8.27",
    "electron-updater": "^4.3.1",
    "emotion": "^10.0.27",
    "free-style": "^4.0.0",
    "hyperapp": "2.0.4",
    "insert-css": "^2.0.0",
    "quill": "^1.3.7",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "selection-ranges": "^3.0.3",
    "slate": "^0.58.1",
    "slate-history": "^0.58.1",
    "slate-react": "^0.58.1"
  },
  "devDependencies": {
    "@types/react": "^16.9.35",
    "cssnano": "^4.1.10",
    "electron": "^8.3.0",
    "parcel-plugin-static-files-copy": "^2.3.1",
    "tslib": "^2.0.0",
    "typescript": "^3.9.2"
  },
  "scripts": {
    "web": "npx parcel index.html",
    "app": "NODE_ENV=dev electron . & npx parcel index.html --target electron --public-url $(pwd)/dist",
    "build": "npx parcel build index.html --target electron --public-url .",
    "pack": "npm run build && npx electron-builder --dir",
    "dist": "npm run build && npx electron-builder"
  },
  "staticFiles": {
    "staticPath": "assets",
    "watcherGlob": "assets/**"
  }
}
