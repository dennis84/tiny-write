{
  "name": "TinyWrite",
  "version": "0.3.3",
  "build": {
    "appId": "com.github.dennis84.tinywrite",
    "files": [
      "index.html",
      "index.js",
      "dist/index.js",
      "fonts/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    }
  },
  "dependencies": {
    "codemirror": "^5.50.2",
    "dayjs": "^1.8.19",
    "electron-updater": "^4.2.0",
    "free-style": "^3.0.0",
    "hyperapp": "2.0.3",
    "insert-css": "^2.0.0",
    "selection-ranges": "^3.0.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-node-resolve": "^6.1.0",
    "@rollup/plugin-typescript": "^2.0.2",
    "electron": "^7.1.7",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-terser": "^5.1.3",
    "tslib": "^1.10.0",
    "typescript": "^3.7.4"
  },
  "scripts": {
    "build": "npx rollup -c",
    "watch": "npx rollup -c -w",
    "pack": "npm run build && npx electron-builder --dir",
    "dist": "npm run build && npx electron-builder",
    "dev": "NODE_ENV=dev npx electron ."
  }
}
