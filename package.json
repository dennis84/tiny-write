{
  "name": "TinyWrite",
  "version": "0.5.0",
  "build": {
    "appId": "com.github.dennis84.tinywrite",
    "files": [
      "index.js",
      "dist/**"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "directories": {
      "output": "app"
    }
  },
  "dependencies": {
    "@emotion/react": "^11.1.2",
    "@emotion/styled": "^11.0.0",
    "codemirror": "^5.58.3",
    "date-fns": "^2.16.1",
    "electron-updater": "^4.3.5",
    "idb": "^5.0.8",
    "is-image": "^3.0.0",
    "prosemirror-commands": "^1.1.4",
    "prosemirror-dropcursor": "^1.3.2",
    "prosemirror-example-setup": "^1.1.2",
    "prosemirror-gapcursor": "^1.1.5",
    "prosemirror-history": "^1.1.3",
    "prosemirror-inputrules": "^1.1.3",
    "prosemirror-keymap": "^1.1.4",
    "prosemirror-markdown": "^1.5.0",
    "prosemirror-model": "^1.13.0",
    "prosemirror-schema-list": "^1.1.4",
    "prosemirror-state": "^1.3.3",
    "prosemirror-transform": "^1.2.8",
    "prosemirror-view": "^1.16.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "electron": "^11.1.0",
    "electron-builder": "^22.9.1",
    "eslint": "^7.15.0",
    "eslint-plugin-react": "^7.21.5",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.5.0",
    "tslib": "^2.0.3",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "web": "parcel index.html",
    "app": "NODE_ENV=dev electron . & parcel index.html --target electron --public-url $(pwd)/dist",
    "build": "npm run lint && parcel build index.html --target electron --public-url .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "staticFiles": {
    "staticPath": "assets",
    "watcherGlob": "assets/**"
  },
  "browserslist": [
    "last 1 Chrome versions"
  ]
}
